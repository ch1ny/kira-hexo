.kira-right-column {
    width: 80px;
    height: 100vh;
    display flex;
    flex-direction: column;
    align-items: center;
    position: sticky;
    top: 0;

    .kira-backtotop {
        bottom: 20px;
        color: rgb(85, 85, 85);
        background-color: rgba(255, 255, 255, 0.3);
        border-radius: 50%;
        margin-top: auto;
        margin-bottom: 15px;
        transition: 500ms;
    }

    .kira-backtotop i {
        font-size: 22px;
    }
}