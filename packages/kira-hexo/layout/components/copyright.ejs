<% if (page.hide_copyright !== true && theme.copyright || page.copyright) { %>
    <div class="kira-post-copyright">
        <strong><%- __('copyright.author') %>：</strong><%= config.author %><br>
        <strong><%- __('copyright.permalink') %>：</strong><%- link_to(page.permalink, decodeURI(page.permalink), {external: true}) %><br>
        <% if (page.copyright) { %>
            <%- page.copyright %>
        <% } else { %>
            <%- theme.copyright %>
        <% } %>
    </div>
<% } %>
